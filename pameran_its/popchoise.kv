#:kivy 1.11.1

<PopChoise>:
    posisi:2
    pos_hint:{"center_x":.5,"center_y":self.posisi}
    Button
        pos_hint:{"center_x":.5,"center_y":.5}
        background_color:0,0,0,.8
        on_press:root.posisi=2
    BoxLayout:
        padding:5
        spacing:5
        size_hint:.8,.7
        pos_hint:{"center_x":.5,"center_y":.5}
        orientation:"vertical"

        Button:
            background_color:1,1,1,.3
            text:"saklar"
            font_name:"fonts/hemi.ttf"
            font_size:self.height/6
            color:0,1,1,1
            on_press:root.press(self.text)
        Button:
            text:"slider"
            background_color:1,1,1,.3
            font_name:"fonts/hemi.ttf"
            font_size:self.height/6
            color:0,1,1,1
            on_press:root.press(self.text)
        Button:
            text:"monitor"
            background_color:1,1,1,.3
            font_name:"fonts/hemi.ttf"
            font_size:self.height/6
            color:0,1,1,1
            on_press:root.press(self.text)
